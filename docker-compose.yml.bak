services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        WWWUSER: "${WWWUSER:-1000}"
        WWWGROUP: "${WWWGROUP:-1000}"
    image: pi-laravel-app
    container_name: pi-laravel-app
    working_dir: /var/www/html
    volumes:
      - ./:/var/www/html:cached
      - ./vendor:/var/www/html/vendor
      - ./node_modules:/var/www/html/node_modules
    environment:
      APP_ENV: local
      APP_DEBUG: "true"
      APP_URL: http://localhost

      DB_CONNECTION: mysql
      DB_HOST: db
      DB_PORT: 3306
      DB_DATABASE: pi_laravel
      DB_USERNAME: pi
      DB_PASSWORD: pi

      REDIS_HOST: redis
    depends_on:
      - db
      - redis

  web:
    image: nginx:1.27-alpine
    container_name: pi-laravel-nginx
    ports:
      - "8000:80"
    volumes:
      - ./:/var/www/html:cached
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - app

  db:
    image: mysql:8.4
    container_name: pi-laravel-db
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: pi_laravel
      MYSQL_USER: pi
      MYSQL_PASSWORD: pi
      MYSQL_ROOT_PASSWORD: root
    ports:
      - "3306:3306"
    volumes:
      - db_data:/var/lib/mysql

  redis:
    image: redis:7-alpine
    container_name: pi-laravel-redis
    ports:
      - "6379:6379"

  phpmyadmin:
    image: phpmyadmin:latest
    container_name: pi-laravel-phpmyadmin
    environment:
      PMA_HOST: db
      PMA_USER: root
      PMA_PASSWORD: root
    ports:
      - "8080:80"
    depends_on:
      - db

  vite:
    image: node:20
    container_name: pi-laravel-vite
    working_dir: /var/www/html
    volumes:
      - .:/var/www/html:cached
      - ./node_modules:/var/www/html/node_modules
    environment:
      VITE_DEV_SERVER_HOST: 0.0.0.0
      VITE_DEV_SERVER_PORT: 5173
    command: npm run dev --host 0.0.0.0
    ports:
      - "5173:5173"
    depends_on:
      - app

  n8n:
    image: n8nio/n8n:latest
    container_name: pi-laravel-n8n
    restart: unless-stopped
    ports:
      - "5678:5678"
    environment:
      - N8N_HOST=localhost
      - N8N_PORT=5678
      - N8N_PROTOCOL=http
      - NODE_ENV=production
      - WEBHOOK_URL=http://localhost:5678/
      - GENERIC_TIMEZONE=Europe/Madrid
      - DB_TYPE=sqlite
    volumes:
      - n8n_data:/home/node/.n8n

  n8n:
    image: n8nio/n8n:latest
    container_name: pi-laravel-n8n
    restart: unless-stopped
    ports:
      - "5678:5678"
    environment:
      - N8N_HOST=localhost
      - N8N_PORT=5678
      - N8N_PROTOCOL=http
      - NODE_ENV=production
      - WEBHOOK_URL=http://localhost:5678/
      - GENERIC_TIMEZONE=Europe/Madrid
      - DB_TYPE=sqlite
    volumes:
      - n8n_data:/home/node/.n8n

volumes:
  db_data:
  n8n_data:
  n8n_data:
